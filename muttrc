# set wait_key = no

# mark all unread mail as read.
macro index <Esc>R "<tag-pattern>~U<enter><tag-prefix><clear-flag>N<tag-prefix><clear-flag>*"

# folder hooks
folder-hook . "set sort = reverse-date"
folder-hook ^.Lists "set sort = reverse-threads"
folder-hook ^.Sent "set sort = reverse-date-sent"

